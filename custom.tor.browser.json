{
    "app-id": "custom.tor.browser",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.38",
    "sdk": "org.gnome.Sdk",
    "command": "/app/Browser/start-tor-browser",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--device=dri",
        "--share=network",
        "--filesystem=xdg-download"
    ],
    "modules": [
        {
            "name": "torbrowser",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.torproject.org/dist/torbrowser/10.0.10/tor-browser-linux64-10.0.10_en-US.tar.xz",
                    "sha256": "bd8599f8db0637c607e4eeb5fb3ad48e516fdeb89e681aa3050f9ad7cb107198"
                },
                {
                    "type": "patch",
                    "path": "xdg-profile-path.patch"
                },
                {
                    "type": "file",
                    "path": "custom.tor.browser.desktop"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "cp Browser/TorBrowser/Data/Tor/torrc-defaults Browser/TorBrowser/Tor/",
                "cp -R Browser /app",
                "install -D Browser/browser/chrome/icons/default/default128.png /app/share/icons/hicolor/128x128/apps/custom.tor.browser.png",
                "install -D -t /app/share/applications/ custom.tor.browser.desktop"
            ]
        },
        {
            "name": "dbus-glib",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://dbus.freedesktop.org/releases/dbus-glib/dbus-glib-0.110.tar.gz",
                    "sha256": "7ce4760cf66c69148f6bd6c92feaabb8812dee30846b24cd0f7395c436d7e825"
                }
            ],
            "buildsystem": "autotools"
        }
    ]
}
